            </tr>
        </table>
    </div>
    <div id="popup" style="display: none;">
        <h2>Create</h2>
        <div id="color-container">
            <label for="color-white"><span class="color-option">White</span></label>
            <label for="color-black">
                <span class="color-option black">Black</span>
            </label>
            <label for="color-random">
                <span class="color-option random">Random</span> 
            </label>
        </div>
        <input type="radio" id="color-white" name="color" value="white" style="display: none;"> 
        <input type="radio" id="color-black" name="color" value="black" style="display: none;"> 
        <input type="radio" id="color-random" name="color" value="random" style="display: none;"> 
        <label for="private">Private:</label>
        <input type="checkbox" id="private">
        <label for="password">Password:</label>
        <input type="password" id="password" placeholder="Custom text">
        <button>Create</button>
    </div>
    <script src="/js/pop.js"></script>
    <script src="/js/logout.js"></script>
</body>
